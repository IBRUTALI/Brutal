<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Fab style. -->
    <style name="MainFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeCircle</item>
    </style>
    
    <style name="FabShapeCircle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <!-- TextView, Button fonts. -->
    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="MainEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <!-- Edit text error colors. -->
    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_lite</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_lite</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="CardViewBorder" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

</resources>