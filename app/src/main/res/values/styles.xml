<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Fab style. -->
    <style name="MainFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/FabShapeCircle</item>
    </style>

    <style name="FabShapeCircle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
    </style>

    <!-- TextView fonts. -->
    <style name="MainTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <!-- Edit text error colors. -->
    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_lite</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red_lite</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/didact_gothic_regular</item>
    </style>

    <!-- Card view border colors. -->
    <style name="CardViewBorder" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <!-- Text style. -->
    <style name="Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
    </style>

    <style name="Text.InputLayout">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.InputLayout.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.InputLayout.Subtitle">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.OnCard">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.InputLayout.Normal">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.InputLayout.Subnormal">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- TextInputLayout options. -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">56dp</item>
        <item name="boxCornerRadiusTopEnd">56dp</item>
        <item name="boxCornerRadiusBottomStart">56dp</item>
        <item name="boxCornerRadiusBottomEnd">56dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/red_lite</item>
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="errorTextColor">@color/red_lite</item>
        <item name="helperTextTextAppearance">@style/Text.InputLayout.Hint</item>
        <item name="helperTextTextColor">@color/gray</item>
        <item name="hintTextAppearance">@style/Text.InputLayout.Hint</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="placeholderTextAppearance">@style/Text.InputLayout.Normal</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="strokeColor">@color/blue_lite</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="BaseButton.Main">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="backgroundTint">@color/blue_lite</item>
    </style>

    <style name="BaseButton.Secondary">
        <item name="android:textColor">@color/blue_lite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/didact_gothic_regular</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

</resources>